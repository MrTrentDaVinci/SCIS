    "fields": [
      "Component Name",
      "Purpose",
      "Inputs",
      "Outputs",
      "Constraints",
      "Dependencies",
      "MCP Integrations"
    ],
    "structure": [
      {
        "component": "<Name of component>",
        "purpose": "<Brief purpose description>",
        "inputs": ["<List of inputs>"],
        "outputs": ["<List of outputs>"],
        "constraints": ["<Any constraints>"],
        "dependencies": ["<Other components or external dependencies>"],
        "mcp_integrations": ["<External MCP / API endpoints integrated>"]
      }
    ]
  },
  "rules": [
    "Follow SCIS phase-lock rules",
