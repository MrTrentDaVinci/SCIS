# LLM friendly url: https://raw.githubusercontent.com/MrTrentDaVinci/SCIS/main/Greenfield4NCCFMaker.json

{
  "file_name": "Greenfield NCCF Maker",
  "description": "Instructions to generate A1p0s0f7.toon, the NCCF Template containing program-wide component contracts with mandatory metric declarations",
  "phase": "A1p0",
  "section": "s0",

  "required_inputs": [
    "A1p0s0f0.md",
    "A1p0s0f1.md",
    "A1p0s0f4.toon",
    "A1p0s0f5.toon"
  ],

  "template": {
    "header": {
      "ID_format": "A1p0s0f7-<ComponentID>",
      "phase": "A1p0",
      "section": "s0"
    },

    "fields": [
      "Component Name",
      "Purpose",
      "Inputs",
      "Outputs",
      "Constraints",
      "Dependencies",
      "MCP Integrations",
      "Metric Obligations"
    ],

    "structure": [
      {
        "component": "<Name of component>",
        "purpose": "<Brief purpose description>",

        "inputs": [
          "<Declared input identifiers (no logic, no validation rules)>"
        ],

        "outputs": [
          "<Declared output identifiers>"
        ],

        "constraints": [
          "<Behavioral, safety, performance, or scope constraints>"
        ],

        "dependencies": [
          "<Other SCIS Component IDs or declared external systems>"
        ],

        "mcp_integrations": [
          "<External MCP / API endpoints integrated, if any>"
        ],

        "metric_obligations": {
          "required": true,
          "categories": [
            "usage_and_access",
            "input_output_compliance",
            "constraint_violation",
            "determinism_and_variance",
            "dependency_health",
            "safety_and_policy_violations",
            "evolution_and_change_tracking"
          ],
          "notes": "Metrics are declared as contractual obligations only. No metric names, formulas, thresholds, dashboards, or tooling are defined at this phase."
        }
      }
    ]
  },

  "rules": [
    "Follow SCIS phase-lock rules strictly",
    "Use deterministic, immutable Component IDs",
    "Each NCCF entry MUST correspond to an existing Component ID in the Component Map (A1p0s0f4.toon)",
    "No NCCF may exist for Non-Components",
    "Inputs and outputs must reference declared Components or Non-Components only",
    "Constraints must be declarative, not algorithmic",
    "Dependencies must be normalized and ID-referenced",
    "MCP integrations must be explicitly declared if external interaction occurs",
    "Every NCCF entry MUST include a Metric Obligations block",
    "Metric obligations may declare categories only; implementations are forbidden at P0",
    "No silent behavior: every constraint must be paired with a measurable violation signal in later phases"
  ],

  "file_dependencies": [
    "A1p0s0f0.md",
    "A1p0s0f1.md",
    "A1p0s0f4.toon",
    "A1p0s0f5.toon"
  ],

  "generation_order_hint": "Generate Component Map (f4) and Non-Component Map (f5) before NCCF (f7). Metric obligations declared in Component Maps must be reflected and expanded here.",

  "notes": [
    "This NCCF file is authoritative for component behavior and measurement obligations",
    "Metric obligations bind runtime, support, and evolution requirements",
    "Concrete metric definitions, thresholds, and tooling are deferred to later phases",
    "If a component cannot meaningfully emit metrics in a required category, an explicit exemption must be declared and justified in a later phase",
    "Unmeasured behavior is considered a contract violation under SCIS"
  ]
}

