{
  "file_name": "Greenfield NCCF Maker",
  "description": "Instructions to generate A1p0s0f7.toon, the NCCF Template containing program-wide component contracts",
  "phase": "A1p0",
  "section": "s0",
  "required_inputs": [
    "A1p0s0f0.md", 
    "A1p0s0f1.md"
  ],
